<idea-plugin>
    <id>com.github.thenuclearnexus.aegis</id>
    <name>Aegis</name>
    <vendor>TheNuclearNexus</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.ultimate</depends>
    <depends>PythonCore</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="McFunction"
                  language="mcfunction"
                  implementationClass="com.github.thenuclearnexus.aegis.lang.McFunctionFileType"
                  extensions="mcfunction"
                  fieldName="INSTANCE"/>

        <fileType name="Bolt"
                  language="bolt"
                  implementationClass="com.github.thenuclearnexus.aegis.lang.BoltFileType"
                  extensions="bolt"
                  fieldName="INSTANCE"/>

        <platform.lsp.serverSupportProvider implementation="com.github.thenuclearnexus.aegis.ide.lsp.AegisLspServerSupportProvider" />

        <applicationConfigurable instance="com.github.thenuclearnexus.aegis.ide.lsp.AegisSettingsConfigurable"
                                 displayName="Aegis LSP Settings"
                                 id="com.github.thenuclearnexus.aegis.settings"/>

        <notificationGroup displayType="BALLOON" id="Aegis LSP" />
    </extensions>
</idea-plugin>
